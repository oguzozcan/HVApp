<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/jobNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="29dp"
        android:text="0"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/warm_grey2"
        android:textAppearance="@style/RalewayLight"
        android:paddingTop="-6dp"
        android:paddingBottom="4dp"
        />

    <TextView
        android:id="@+id/tabName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobNumber"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/RalewayBold"
        android:textSize="13dp"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="@color/warm_grey2"
        android:padding="4dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/tabName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="13dp"
        android:background="@color/warm_grey2" />

</RelativeLayout>