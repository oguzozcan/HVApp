<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wheelPickerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/calendarRowBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/startTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="true"
        aigestudio:wheel_item_align="right"
        aigestudio:wheel_item_text_color="@color/white_fourty"
        aigestudio:wheel_item_text_size="21sp"
        aigestudio:wheel_selected_item_text_color="@color/white" />
    <!--aigestudio:wheel_selected_item_text_color="#536D8A"
            android:background="#E5DEEB"
            aigestudio:wheel_item_text_color="#A7A7DB"-->

    <TextView
        android:id="@+id/divider"
        style="@style/RalewayBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:textColor="@color/white"
        android:textSize="24sp" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/endTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="true"
        aigestudio:wheel_item_text_color="@color/white_fourty"
        aigestudio:wheel_item_text_size="21sp"
        aigestudio:wheel_selected_item_text_color="@color/white" />

    <TextView
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="right"
        android:padding="10dp"
        android:text="Bitti"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>